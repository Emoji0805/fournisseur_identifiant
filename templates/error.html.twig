{# templates/error.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8d7da;
            color: #721c24;
        }

        .error-container {
            text-align: center;
            background: #f5c6cb;
            padding: 20px;
            border: 1px solid #f5c2c7;
            border-radius: 5px;
        }

        .error-container h1 {
            margin: 0;
            font-size: 3em;
        }

        .error-container p {
            margin: 10px 0;
        }

        .error-container a {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            color: #721c24;
            background: #f1e7e9;
            text-decoration: none;
            border: 1px solid #721c24;
            border-radius: 3px;
        }

        .error-container a:hover {
            background: #721c24;
            color: #f8d7da;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>Error {{ code }}</h1>
        <p>{{ message }}</p>
        <a href="/">Go Back to Home</a>
    </div>
</body>
</html>