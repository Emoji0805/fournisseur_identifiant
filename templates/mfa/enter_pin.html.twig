{% if message %}
    <p>{{ message }}</p>
{% endif %}

{% if error %}
    <p style="color: red;">{{ error }}</p>
{% endif %}

<form method="POST" action="{{ path('mfa_verify_pin') }}">
    <label for="pin">Entrez votre code PIN :</label>
    <input type="text" id="pin" name="pin" maxlength="6" required>
    <button type="submit">Valider</button>
</form>
